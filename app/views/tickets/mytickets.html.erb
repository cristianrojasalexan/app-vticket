<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-gray-600">Listado de Mis Tickets</h3> 
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <tr>
                <thead>
                <th>Titulo</th>
                <th>Descripci√≥n</th>
                <th>Prioridad</th>
                <th>Estado</th>
                <th></th>
                </thead>
            </tr>
            <% @tickets.each do |ticket| %>
            <tr>
                <td><%= ticket.title %></td>
                <td><%= ticket.description %></td>
                <%if ticket.priority == 1%>
                    <td class="bg-gradient-danger text-white"><%= get_priority_text(ticket.priority) %></td>
                <% else %>
                    <td><%= get_priority_text(ticket.priority) %></td>
                <% end %>
                <td><%= get_status_text(ticket.status) %></td>
                <td>
                    <%= link_to "Cambiar Estado", edit_myticket_path(ticket), class: "btn btn-info" %>
                </td>
            </tr>
            <% end %>
        </table>
    </div>
</div>