<body class="bg-gradient-primary">

  <div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Registrar Usuario</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= f.label(:first_name, 'Nombre:') %>
                    <%= f.text_field(:first_name, autofocus: true, class: 'form-control form-control-user') %>
                  </div>
                  <div class="col-sm-6">
                    <%= f.label(:last_name, 'Apellido:') %>
                    <%= f.text_field(:last_name, class: 'form-control form-control-user') %>                    
                  </div>
                </div>
                <div class="form-group">
                  <div class="field">
                    <%= f.label(:email, 'Email:')%><br />
                    <%= f.email_field :email, class: "form-control form-control-user", autofocus: true, autocomplete: "email" %>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <div class="field">
                      <%= f.label :password, 'Contraseña:' %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> caracteres min.)</em>
                      <% end %><br />
                      <%= f.password_field :password, class: "form-control form-control-user", autocomplete: "new-password" %>
                    </div>                    
                  </div>
                  <div class="col-sm-6">
                    <div class="field">
                      <%= f.label :password_confirmation, 'Confirme Contraseña:' %><br />
                      <%= f.password_field :password_confirmation, class: "form-control form-control-user", autocomplete: "new-password" %>
                    </div>                    
                  </div>
                </div>
                <div class="actions">
                  <%= f.submit "Crear Usuario", class: "btn btn-primary btn-user btn-block" %>
                </div>
                <hr>
                <% end %>
              <hr>
              <div class="text-center">                
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>